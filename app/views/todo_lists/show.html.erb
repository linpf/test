

  <h2>
  <%= "#{@todo_list.list_name} (#{@todo_list.list_due_date})" %>
  <%= link_to "Edit", edit_todo_list_path(@todo_list) , class: 'btn btn-warning' %>
  </h2>


<table class="table table-striped table-hover table-bordered table-condensed">

  <thead>
    <tr>
      <th>Title</th>
      <th>Due date</th>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_list.todo_items.each do |todo_item| %>
      <tr class=<%= cycle('success', 'warning') %>>
        <td><%= todo_item.title %></td>
        <td><%= todo_item.due_date %></td>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.completed %></td>
        <td><%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_list, todo_item) , class: "btn btn-xs btn-warning" %></td>
        <td><%= link_to 'Delete', [@todo_list, todo_item], method: :delete , class: "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p/>



<%= link_to 'New Todo Item', new_todo_list_todo_item_path(@todo_list) , class: 'btn btn-success' %>

