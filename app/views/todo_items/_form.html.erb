<%= form_for([@todo_list,@todo_item], {class: 'form-horizontal'}) do |f| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% @todo_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-1 control-label'%>
    <div class="col-sm-11">
      <%= f.text_field :title , class: 'form-control'%>
    </div>
  </div>


  <div class="field form-group">
    <%= f.label :description , class: 'col-sm-1 control-label'%>
    <div class="col-sm-11">
      <%= f.text_area :description , class: 'form-control'%>
    </div>
  </div>

  <% if @todo_item.persisted? %>
  <div class="field form-group">
    <%= f.label :completed,  class: 'col-sm-1 control-label'%>
    <div class="col-sm-11">
      <%= f.check_box :completed , class: 'form-control'%>
    </div>
  </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :due_date , class: 'col-sm-1 control-label'%>
    <div class="col-sm-11">
      <%= f.date_select :due_date , class: 'form-control'%>
    </div>
  </div>

  &nbsp;

  <div class="actions form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit nil, :class => 'btn btn-primary'%>  &nbsp;
      <%= link_to 'Cancel', @todo_list , class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
