<%= form_for([@todo_list,@todo_item], {class: 'form-horizontal'}) do |f| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% @todo_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label'%><br>
    <%= f.text_field :title , class: 'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :due_date %><br>
    <%= f.date_select :due_date , class: 'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description , class: 'form-control'%>
  </div>

  <% if @todo_item.persisted? %>
  <div class="field form-group">
    <%= f.label :completed,  class: 'col-sm-2 control-label'%><br>
    <%= f.check_box :completed , class: 'form-control'%>
  </div>
  <% end %>

  <div class="actions form-group">
    <div class="col-sm-10">
      <%= f.submit nil, :class => 'btn btn-primary'%>
    </div>
  </div>
<% end %>
